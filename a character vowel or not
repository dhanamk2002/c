#include <stdio.h>

int main() {
    char c;
    int low,up;
    printf("Enter the  character:");
    scanf("%c",&c);
    low=(c=='a'||c=='e'||c=='i'||c=='o'||c=='u');
    up=(c=='A'||c=='E'||c=='I'||c=='O'||c=='U');
    if(low||up)
    printf("%c is vowel",c);
    else
    printf("%c is not an  vowel",c);
    return 0;
}
/* output
Enter the  character:d
d is not an  vowel
*/
